<section>
    <p> </p>
    <div class="horizontal">
        <img alt="me" src="/public/profile.png" width="100" height="100">
        <div>
            <br>
            <p> username: {{username}} </p>
            <p> email: {{email}} </p>
        </div>
    </div>
    <h3>About Me</h3>
    <p> School: San Francisco State University</p>
    <p>Major: Computer Science</p>
    <p>Hobbies: Travelling, learning new skills</p>
    <h3> Post History</h3>
    <ol>
        <li>School Vlog 1</li>
        <li>School Vlog 2</li>
        <li>School Vlog 3</li>
    </ol>

    <div id="photo_data">
    {{#each posts}}
        <a href="/posts/{{this.id}}">
            <div class="photo_wrapper" >
                <img src="{{this.thumbnail}}" width="100px" height="100px">
                <span>{{this.title}}</span>
            </div>
        </a>
    {{/each}}
    </div>
</section>
