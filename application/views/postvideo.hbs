<div class="content">
    <section>
        <form action="/posts/upload" method="post" enctype="multipart/form-data" >
            <label for="title">Title:</label>
            <input required type="text" id="title" name="title"><br>
            <label for="description">Description:</label>
            <input required type="text" id="description" name="description"><br>
            <label for="video">Video :</label>
            <input type="file" id="video" name="video" accept="video/*"><br>
            <label for="accept_tos">Accept <a href="">terms of service to upload videos</a>:</label>
            <input required type="checkbox" id="accept_tos" name="accept_tos"><br>
            <input type="submit" value="Submit">
        </form>
    </section>
</div>
